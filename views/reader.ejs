<%- include('partials/head', {
  title: 'Đọc sách',
  description: 'Trang đọc sách trực tuyến',
  readerPage: true
}) %>


<%- include('partials/navbar', { readerPage: true }) %>


<div class="reader-page">
  <div class="reader-header bg-white border-bottom shadow-sm">
    <div class="container-fluid py-3">
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <a href="javascript:history.back()" class="text-dark text-decoration-none fs-6" id="back-to-book">
            <i class="fas fa-arrow-left me-2"></i> Quay lại
          </a>
        </div>
        <div class="text-center flex-grow-1">
          <h1 class="chapter-title fw-bold fs-4 mb-0" id="chapterTitle"></h1>
          <p class="text-muted small" id="bookTitle"></p>
        </div>
        <div>
          <button class="btn btn-outline-secondary btn-sm" id="toggle-dark-mode">
            <i class="fas fa-moon"></i>
          </button>
        </div>
      </div>
    </div>
  </div>


  <div class="reader-content py-4">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-9">
          <div class="card shadow border-0 rounded-3">
            <div class="card-body">
              <div class="chapter-content px-3" id="chapter-content" data-chapter-id="<%= chapterId %>">
                <div class="text-center py-5">
                  <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Đang tải...</span>
                  </div>
                  <p class="mt-3">Đang tải nội dung chương sách...</p>
                </div>
              </div>
            </div>
          </div>


          <div class="chapter-navigation mt-4 d-flex justify-content-between align-items-center">
            <a href="#" class="btn btn-outline-secondary disabled" id="prev-chapter">
              <i class="fas fa-chevron-left me-2"></i> Chương trước
            </a>
            <div class="text-center">
              <div class="spinner-border text-secondary" role="status" id="chapter-loading" style="display: none;">
                <span class="visually-hidden">Đang tải...</span>
              </div>
            </div>
            <a href="#" class="btn btn-outline-secondary disabled" id="next-chapter">
              Chương sau <i class="fas fa-chevron-right ms-2"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<% const readerPage = true %>
<%- include('partials/footer', { readerPage }) %>

