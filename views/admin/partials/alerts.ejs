<% if (typeof success !== 'undefined' && success.length > 0) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= success %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
</div>
<% } %>

